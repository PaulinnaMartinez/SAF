
@{
    ViewBag.Title = "Index";
    //Layout = null;
    Layout = "~/Views/Shared/Nulo.cshtml";
}

@Html.Raw(TempData["msg"])

<style>

    div.one {
        border-style: solid;
        border-width: 5px;
    }
</style>


<script type="text/javascript">
    var flag = "@TempData["cargado"]";
    if (flag != null && flag =="S") {
        alert('@TempData["alert"]');
    }
</script>

@using (Html.BeginForm("inicio", "Home", FormMethod.Post))
{
<div style="background-color:#f2f2f2; border-width:5px;  
    height:500px; width:400px; border-radius:5px; border-width:20px; position: relative;
    left: 32%; top:50px;box-shadow: 2px 2px 5px #404040;">
    <div style="position:relative; left:15%; top:50px;">
        <h2 style="text-align:center; margin-right:110px;">Asesorias <br /> Facultades UANL</h2>
        <br />
        <div class="form-group">
            <label for="exampleInputEmail1">Matricula</label>
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="matricula">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" , name="password">
        </div>
        <div>
            @Html.RadioButton("modalidad", "M", new { @checked = "checked", @style = " margin-left: 50px; margin-right: 5px;" })Maestro
             @Html.RadioButton("modalidad", "A", new { @style = " margin-left: 30px; margin-right: 5px;" })Alumno
        </div>

        <br />
        <br />
        <div style ="margin-left: 100px">
            <button type="submit" class="btn btn-primary">Submit</button>

            <p>
                @Html.ActionLink("Registrarse", "Create", "Usuario")
            </p>
        </div>
        
    </div>
    
</div>
}




        
