@model SAF.Models.Grupo

@{
    ViewBag.Title = "Create";
}

<h2>Nuevo grupo</h2>

<a class="btn btn-outline-primary" href="~/Clase/Create" role="button">Agregar clase</a>
@*<a href="~/Clase/Create">Agregar clase</a>*@
<a class="btn btn-outline-primary" href="~/Tema/Create" role="button">Agregar tema</a>

@Html.Raw(TempData["msg"])

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        <div class="col-md-10">
           
            @Html.DropDownList("ddlClase", new SelectList(ViewBag.lc, "idClase", "nombre"), "Seleccione clase")
       
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <div id="temas">

            </div>
        </div>
    </div>

            <div class="form-group">
                @Html.LabelFor(model => model.facultad, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.facultad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.facultad, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.salon, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.salon, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.salon, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.fecha, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.hora, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.hora, new { htmlAttributes = new { @class = "form-control", @type = "time" } })
                    @Html.ValidationMessageFor(model => model.hora, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.costo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.costo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.costo, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                
                <div class="col-md-10">
                   
                    <p>@Html.RadioButtonFor(x => x.activo, "S", new { @checked = "checked" })Activo @Html.RadioButtonFor(x => x.activo, "N")Inactivo</p>
                </div>
            </div>




            <div class="form-group">
                <div class="col-md-offset-2 col-md-10"  style="left:100px;">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
        }






        <script src="~/Scripts/jquery-3.3.2.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


        <script>
            $("#ddlClase").change(function () {
                var id = $(this).val();
                $("#temas").load("/Grupo/temas?id=" + id);
            });
        </script>

